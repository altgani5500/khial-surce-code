<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tagog.first.News_content"
    tools:showIn="@layout/news_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="عنوان الخبر عنوان الخب :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView57"
            android:layout_marginTop="7dp"
            android:layout_alignRight="@+id/imageView11"
            android:layout_alignEnd="@+id/imageView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal|bold"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:textSize="18sp" />

        <TextView
            android:lineSpacingMultiplier="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/large_text"
            android:id="@+id/content"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:minHeight="3dp"
            android:minEms="3"
            android:layout_below="@+id/textView58"
            android:layout_marginTop="17dp"
            android:textStyle="normal|bold" />

        <ImageView
            android:scaleType="centerCrop"
            android:background="@drawable/splash"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageView11"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView57"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="14dp" />

        <TextView
            android:drawableRight="@drawable/pers"
            android:textSize="12sp"
            android:text="خيّال للنقل"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView58"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView58"
            android:id="@+id/textView60"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:ems="5"
            android:maxEms="4"
            android:layout_toStartOf="@+id/textView58"
            android:layout_toLeftOf="@+id/textView58"
            android:gravity="right"
            android:layout_marginRight="8dp" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
