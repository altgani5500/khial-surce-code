<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_edge3"
    android:padding="7dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp">


        <com.example.tagog.first.CustomButtona
            android:background="#294d6f"
            android:id="@+id/app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ارسال السعر"
            android:onClick="FragmentTwoClick"
            android:layout_weight="2"
            android:layout_marginLeft="0dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <com.example.tagog.first.MyEditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"

        android:id="@+id/editText12"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:inputType="phone"
        android:hint="ادخل السعر هنا"
        android:maxLength="4"
        android:background="@drawable/test2222"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edge3"
        android:orientation="horizontal"

        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--  ListRow Left sied Thumbnail image -->

        <!-- Title Of Song-->
        <com.example.tagog.first.MyTextView2

            android:id="@+id/title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:typeface="sans"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_edge3"
            android:text=" سعر نقل الراس الواحدبالريال :"
            android:layout_marginBottom="5dp"
            android:gravity="center" />

        <!-- Artist Name -->

        <!-- Rightend Duration -->

        <!-- Rightend Arrow -->

    </RelativeLayout>


</RelativeLayout>