<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_j"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tagog.first.Add_j2"
    android:background="#fff">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:background="#113543">

        <Button

            android:text="ابحث"
            android:layout_width="wrap_content"
            android:layout_height="35dp"

            android:id="@+id/button4"
            android:background="@drawable/test2222a"

            android:drawableLeft="@android:drawable/ic_menu_search"

            android:layout_centerVertical="true"
            android:textColor="#fff"



            android:textSize="14sp"
            android:layout_margin="2dp"
            android:textStyle="normal|bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />



        <Spinner
            android:text="كل الرحلات"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/button2"

            android:entries="@array/spinner_item2"
            android:background="@drawable/test2222a"

            android:layout_centerVertical="true"

            android:drawableLeft="@drawable/ho"

            android:layout_weight="1.77"

            android:textSize="17dp"
            android:layout_margin="2dp"
            android:textStyle="normal|bold"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:paddingTop="20dp"
        android:background="#294d6f"
        android:paddingBottom="10dp"
        android:elevation="1dp">

        <com.example.tagog.first.CustomButtona

            android:text="اطلب رحله"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button44"

            android:background="#294d6f"

            android:layout_centerVertical="true"
            android:textColor="#fff"

            android:layout_weight="2"

            android:textSize="15dp"
            android:textStyle="normal|bold"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:drawableTop="@drawable/add2" />



        <com.example.tagog.first.CustomButtona
            android:text="طلباتي"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button28"
            android:background="#294d6f"

            android:layout_centerVertical="true"
            android:textColor="#fff"

            android:onClick="FragmentTwoClick"
            android:layout_weight="2"

            android:textSize="15dp"
            android:textStyle="normal|bold"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:drawableTop="@drawable/req"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <com.example.tagog.first.CustomButtona
            android:text="ججوزاتي"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button222"

            android:background="#294d6f"


            android:layout_centerVertical="true"
            android:textColor="#fff"


            android:layout_weight="2"

            android:textSize="15dp"
            android:textStyle="normal|bold"
            android:drawableTop="@drawable/req2" />
    </LinearLayout>









    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/listView2"
        android:layout_alignEnd="@+id/listView2">

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <com.example.tagog.first.CustomButtona

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/erorrp"
            android:textSize="14sp"
            android:textColor="#000"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_edge3"
            android:drawableTop="@drawable/er"
            android:text="فشل الاتصال اع المحاولة"
            android:paddingLeft="3dp"
            android:paddingRight="3dp" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView2"
        android:layout_below="@+id/linearLayout" />


</RelativeLayout>
