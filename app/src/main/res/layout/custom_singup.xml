            android:textColor="#343434"
            android:textSize="@dimen/action_button_content_margin"
            android:gravity="right"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"


            android:text="سيتم قبول طلبك وتفعيل حسابك خلال يوم واحد من تاريخ التسجيل وبعدها يمكنك دخول حسابك الشخصي "

            android:textStyle="normal|bold" />

        <com.example.tagog.first.MyTextView2

            android:id="@+id/title"
            android:drawableLeft="@drawable/wwe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_green_dark"
            android:typeface="sans"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_edge3"
            android:text="ارشادات"
            android:gravity="center"
