<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tagog.first.Admin"
    tools:showIn="@layout/admin">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView2"

        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_above="@+id/linearLayout" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_marginTop="2dp">

        <com.example.tagog.first.CustomButtona

            android:text="طلبات مقبولة"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button44"

            android:background="#294d6f"

            android:layout_centerVertical="true"
            android:textColor="#fff"

            android:layout_weight="2"

            android:textSize="15dp"
            android:textStyle="normal|bold"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:drawableTop="@android:drawable/ic_menu_mapmode"
            android:elevation="1dp" />



        <com.example.tagog.first.CustomButtona
            android:text="السائقين"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button28"
            android:background="#294d6f"

            android:layout_centerVertical="true"
            android:textColor="#fff"

            android:onClick="FragmentTwoClick"
            android:layout_weight="2"

            android:textSize="15dp"
            android:textStyle="normal|bold"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:drawableTop="@android:drawable/ic_menu_my_calendar"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:elevation="1dp" />

        <com.example.tagog.first.CustomButtona
            android:text="اضف خبر"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button222"

            android:background="#294d6f"


            android:layout_centerVertical="true"
            android:textColor="#fff"


            android:layout_weight="2"

            android:textSize="15dp"
            android:textStyle="normal|bold"
            android:drawableTop="@android:drawable/ic_menu_recent_history"
            android:elevation="1dp" />
    </LinearLayout>
</RelativeLayout>
