<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.tagog.first.Watting_u">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <com.example.tagog.first.CustomButtona

                android:text="قيد الاتفاق"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button44"

                android:background="#113543"

                android:layout_centerVertical="true"
                android:textColor="#fff"

                android:layout_weight="2"

                android:textSize="15dp"
                android:textStyle="normal|bold"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:drawableTop="@drawable/rw"
                android:elevation="1dp" />


            <com.example.tagog.first.CustomButtona
                android:text="طلبات اكتملت"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button222"

                android:background="#113543"


                android:layout_centerVertical="true"
                android:textColor="#fff"


                android:layout_weight="2"

                android:textSize="15dp"
                android:textStyle="normal|bold"
                android:drawableTop="@drawable/rc"
                android:elevation="1dp" />




            <com.example.tagog.first.CustomButtona
                android:text="عرض الكل"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2224"

                android:background="#113543"


                android:layout_centerVertical="true"
                android:textColor="#fff"


                android:layout_weight="2"

                android:textSize="15dp"
                android:textStyle="normal|bold"
                android:drawableTop="@drawable/myr"
                android:elevation="1dp" />
        </LinearLayout>


    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_watting_u" />

    <ProgressBar
        android:id="@+id/progressBar1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:elevation="3dp"
        tools:layout_width="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center_vertical"

        android:drawableLeft="?android:attr/alertDialogIcon"
        />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/erorrp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:elevation="3dp"
        tools:layout_width="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded_edge3"
        android:drawableLeft="?android:attr/alertDialogIcon"
        android:text="فشل الاتصال اعد المحاولة" />
</android.support.design.widget.CoordinatorLayout>
